<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    tools:context=".view.activities.PrayerActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/prayerToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="?attr/colorText" />

    <ListView
        android:id="@+id/prayerList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="?attr/colorText"
        android:dividerHeight="0.25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prayerToolbar" />

    <ScrollView
        android:id="@+id/prayerScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:background="?attr/colorBackground"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prayerToolbar">

        <TextView
            android:id="@+id/prayerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="?attr/colorText"
            tools:text="XDDDDDDDDDDDDDDDDDD" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>