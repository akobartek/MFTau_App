<resources>
    <!-- Light base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="preferenceTheme">@style/PrefsTheme</item>
        <item name="alertDialogTheme">@style/Widget.MFTau.Dialog</item>
        <item name="actionOverflowButtonStyle">@style/Widget.MFTau.OverflowButtonStyle</item>
        <item name="textInputStyle">@style/Widget.MFTau.TextInputLayout</item>
        <item name="android:datePickerDialogTheme">@style/Widget.MFTau.Dialog</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.MFTau.Dialog</item>
        <item name="android:itemBackground">@color/colorListItemBackground</item>
    </style>

    <style name="AppTheme.Launcher" parent="Theme.AppCompat">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="PrefsTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:layout">@layout/fragment_preferences</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Theme.MaterialComponents.DayNight" />

    <style name="AppTheme.TextInputLayoutOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorAccent">#391e1e</item>
    </style>

    <style name="Widget.MFTau.OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorSecondary</item>
    </style>

    <style name="Widget.MFTau.Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">#28292e</item>
        <item name="colorSecondary">#28292e</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorError</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.MFTau.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:theme">@style/AppTheme.TextInputLayoutOverlay</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.MFTau.Dialog" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextAppearance.MFTau.Tab" parent="@style/TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/mffont</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MainMenuButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mffont</item>
        <item name="android:textColor">@color/colorButtonText</item>
    </style>

    <style name="MFTauToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="layout_scrollFlags">enterAlways</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="MFTauToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/mffont</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="MFTauEmptyView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorIcons</item>
        <item name="android:textSize">15sp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="MFTauLoadingIndicator">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:indeterminateTint">@color/colorAccent</item>
    </style>
</resources>