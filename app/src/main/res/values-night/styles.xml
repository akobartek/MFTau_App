<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark base application theme. -->
    <style name="AppTheme.Dark" parent="AppTheme.Light">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">#28292e</item>
        <item name="colorSecondary">#FFFFFF</item>
        <item name="colorPrimaryDark">#28292e</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="colorText">#FFFFFF</item>
        <item name="colorButtonText">#FFFFFF</item>
        <item name="colorIcons">#FFFFFF</item>
        <item name="colorMenuIcons">#FFFFFF</item>
        <item name="colorBackground">#28292e</item>
        <item name="colorListItemBackground">#232428</item>
        <item name="logoFull">@drawable/logo_full_white</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="actionOverflowButtonStyle">@style/Widget.MFTau.OverflowButtonStyle</item>
        <item name="android:datePickerDialogTheme">@style/Widget.MFTau.Dialog</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.MFTau.Dialog</item>
        <item name="android:itemBackground">#232428</item>
    </style>

    <style name="Widget.MFTau.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="boxStrokeColor">#FFFFFF</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="hintTextColor">#FFFFFF</item>
        <item name="android:theme">@style/AppTheme.TextInputLayoutOverlay</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>