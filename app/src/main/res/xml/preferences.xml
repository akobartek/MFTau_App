            android:textColor="@color/colorText"
            android:title="@string/night_mode_title"
            app:iconSpaceReserved="false" />
        <SwitchPreference
            android:background="@color/colorBackground"
            android:defaultValue="false"
            android:key="@string/repeat_gospel_key"
            android:summary="@string/repeat_gospel_summary"
            android:textColor="@color/colorText"
            android:title="@string/repeat_gospel_title"
            app:iconSpaceReserved="false" />
        <SwitchPreference
            android:background="@color/colorBackground"
            android:defaultValue="false"
            android:key="@string/awake_songbook_key"
            android:summary="@string/awake_songbook_summary"
